<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- First Name (mandatory) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/FirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name "
                    android:textStyle="bold"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentTop="true"/>

                <EditText
                    android:id="@+id/editTextFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name *"
                    android:inputType="text"
                    android:layout_marginTop="18dp"
                    android:importantForAccessibility="yes"
                    android:contentDescription="First Name"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/LasttName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name "
                    android:textStyle="bold"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentTop="true"/>

                <EditText
                    android:id="@+id/editTextLasttName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name *"
                    android:inputType="text"
                    android:layout_marginTop="18dp"
                    android:importantForAccessibility="yes"
                    android:contentDescription="First Name"/>

            </RelativeLayout>

            </LinearLayout>

            <!-- Gender (mandatory) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textViewGenderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender *"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"/>

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Gender"
                    android:layout_below="@id/textViewGenderLabel"/>

            </RelativeLayout>

            <!-- Marital Status (mandatory) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textViewMaritalStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marital Status *"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"/>

                <Spinner
                    android:id="@+id/spinnerMaritalStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Marital Status"
                    android:layout_below="@id/textViewMaritalStatusLabel"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/MaritalStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marital Status *"
                android:paddingLeft="16dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"/>
            <Spinner
                android:id="@+id/spinnerBorrowerOccupation"
                android:layout_width="match_parent"
                android:paddingLeft="16dp"
                android:layout_height="wrap_content"
                android:hint="Borrower Occupation *"/>

            <!-- Referred By -->
            <TextView
                android:id="@+id/textViewMaritalStatusLabels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Referred By *"
                android:textStyle="bold"
                android:layout_alignParentTop="true"/>
            <Spinner
                android:id="@+id/spinnerReferredBy"
                android:layout_width="match_parent"
                android:paddingLeft="16dp"
                android:layout_height="wrap_content"
                android:hint="Referred By"/>

            <!-- Choose Line (mandatory) -->
            <TextView
                android:id="@+id/textViewMaritalStatusLabelss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Line *"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:layout_alignParentTop="true"/>

            <Spinner
                android:id="@+id/spinnerChooseLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:hint="Choose Line *"/>

            <!-- Save and Cancel Buttons -->
            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/buttonSave"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Save"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/buttonCancel"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    tools:ignore="ButtonOrder,TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>

